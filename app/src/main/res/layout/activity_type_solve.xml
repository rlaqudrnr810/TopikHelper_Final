<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCF6"
    tools:context=".VirtualTest_Activity">


    <!-- 상단바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFCF6"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="#F1C40F"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="15dp"
                android:gravity="center|left"
                android:text="Type Test"
                android:textColor="#070707"
                android:textSize="25sp"
                android:textStyle="normal" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFCF6"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">



            <Button
                android:id="@+id/type_b1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_roundsoft_click"
                android:textColor="#FF000000"
                android:text="Listening" />

            <Button
                android:id="@+id/type_b2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_roundsoft_click"
                android:textColor="#FF000000"
                android:text="Reading"/>


            <Button
                android:id="@+id/type_b3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_roundsoft_click"
                android:textColor="#FF000000"
                android:text="Grammar"/>


            <Button
                android:id="@+id/type_b4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_roundsoft_click"
                android:textColor="#FF000000"
                android:text="Writing"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
