<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".One_Solve_Grammar_Activity">


    <!-- 상단바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center"
            android:background="#F1C40F"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Grammar"
                android:textColor="#070707"
                android:textSize="25sp"
                android:textStyle="normal" />
            <Button
                android:id="@+id/adding_solution"
                android:text="adding solution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginRight="2dp"
                android:background="@drawable/btn_orange"
                android:textColor="#000000"
                android:textSize="8dp"
                android:textStyle="bold"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFFFF"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <com.github.chrisbanes.photoview.PhotoView
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:scaleType="fitStart"
                    android:adjustViewBounds="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#FFFCF6"
                android:layout_weight="1.7">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <Button
                        android:id="@+id/one_grammar_b1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="#FFEEE8AA"
                        android:text="①"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="bold"/>
                    <Button
                        android:id="@+id/one_grammar_b2"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="#FFEEE8AA"
                        android:layout_marginTop="3dp"
                        android:text="②"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="bold"/>
                    <Button
                        android:id="@+id/one_grammar_b3"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="#FFEEE8AA"
                        android:layout_marginTop="3dp"
                        android:text="③"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="bold"/>
                    <Button
                        android:id="@+id/one_grammar_b4"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="#FFEEE8AA"
                        android:layout_marginTop="3dp"
                        android:text="④"
                        android:textColor="#000000"
                        android:textSize="15dp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="2dp"
                    android:layout_weight="4">
                    <Button
                        android:id="@+id/pre"
                        android:text="pre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_orange_click"
                        android:layout_margin="3dp"
                        android:layout_weight="1.5"
                        android:textColor="#000000"
                        android:textSize="13dp"
                        android:textStyle="bold"/>
                    <Button
                        android:id="@+id/check"
                        android:text="check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1.2"
                        android:background="@drawable/btn_orange_click"
                        android:textColor="#000000"
                        android:textSize="13dp"
                        android:textStyle="bold"/>
                    <Button
                        android:id="@+id/sol"
                        android:text="go to solution"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1.2"
                        android:background="@drawable/btn_orange_click"
                        android:onClick="mOnPopupClick"
                        android:textColor="#000000"
                        android:textSize="13dp"
                        android:textStyle="bold"/>
                    <Button
                        android:id="@+id/next"
                        android:text="next"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/btn_orange_click"
                        android:textColor="#000000"
                        android:textSize="13dp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>



